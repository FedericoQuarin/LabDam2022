<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:fadingEdgeLength="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutCamasDobles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/imageViewCamasDobles"
                    style="@style/Widget.LabDam2022.ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/king_bed_white_24" />

                <TextView
                    android:id="@+id/txtViewCamasDobles"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="{cantidad} camas dobles" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCamasSimples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/imageViewCamasSimples"
                    style="@style/Widget.LabDam2022.ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/single_bed_white_24" />

                <TextView
                    android:id="@+id/txtViewCamasSimples"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="{cantidad} camas simples" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEstacionamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <ImageView
                    android:id="@+id/imageViewEstacionamiento"
                    style="@style/Widget.LabDam2022.ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/local_parking_white_24" />

                <TextView
                    android:id="@+id/txtViewEstacionamiento"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Con estacionamiento" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
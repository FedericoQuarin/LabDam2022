<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:fadingEdgeLength="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewHabitaciones"
                style="@style/Widget.LabDam2022.LabelWithDrawable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="{habitaciones} habitaciones"
                app:drawableStartCompat="@drawable/door_white_24" />

            <TextView
                android:id="@+id/txtViewWifi"
                style="@style/Widget.LabDam2022.LabelWithDrawable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="Tiene WIFI"
                app:drawableStartCompat="@drawable/wifi_white_24" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>